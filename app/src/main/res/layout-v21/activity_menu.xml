<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7bd9f9"
        tools:context="tw.edu.ntu.csie.kurokuma.sync.MainActivity"
        android:id="@+id/container">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/singlePlayerBtn"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:layout_marginTop="50dp"
            android:onClick="goSinglePlayer"
            android:transitionName="@string/blue_transitionName"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#0099cc"
            fancy:fb_focusColor="#19c2df"
            fancy:fb_iconResource="@drawable/person_button_size"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="30dp"
            fancy:fb_text="Single Player"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="30sp"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/mutiplePlayerBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="50dp"
            android:onClick="goMultiplePlayer"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#0099cc"
            fancy:fb_focusColor="#19c2df"
            fancy:fb_iconResource="@drawable/people_button_size"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="30dp"
            fancy:fb_text="Multiple Player"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="30sp"/>

    </FrameLayout>
</android.support.v4.widget.DrawerLayout>
